<section class="py-3 text-center container">
	<div class="row py-lg-5">
		<div class="col-lg-6 col-md-8 mx-auto">
			<h1 class="fw-light">Welcome {{username}}</h1>
			<p class="lead text-muted">We care for your stuff</p>
			<p>
				<a href="/auctions/new" class="btn btn-primary my-2">Create an Auction</a>
			</p>
		</div>
	</div>
</section>

<div>
	<a class="btn btn-primary" href="/auctions">All</a>
	<a class="btn btn-primary" href="/auctions/car">Cars</a>
	<a class="btn btn-primary" href="/auctions/electronic">Electronics and Computer</a>

	<a class="btn btn-primary" href="/auctions/fashion">Fashion, Health and Beauty</a>
	<a class="btn btn-primary" href="/auctions/hobbies">Hobbies, Toys, Outdoors</a>
	<a class="btn btn-primary" href="/auctions/home">Home, Garden and Tools</a>

	<a class="btn btn-primary" href="/auctions/kitchen">Kitchen and Dining</a>
</div>

<div class="container">
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
		{{#each auctions as |auction|}}
		<div class="album py-5 bg-light">
			<div class="col">
				<div class="card shadow-sm">
					<img class="bd-placeholder-img card-img-top" width="100%" height="225" role="img"
						aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"
						alt="" src="{{image}}">
					<div class="card-body">
						<p class="card-title">{{title}} </p>
						<div class="d-flex justify-content-between align-items-center">
							<div>
								<a class="btn btn-primary" href="/auctions/{{_id}}">View</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>