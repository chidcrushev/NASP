{{>header}}	
<div class="row">
	<h1>Edit auction</h1>
	<div class="col-6 offer-3">
		<form action = "/auctions/{{id}}>?_method=PUT" method ="POST" >

			<!-- product name -->
			<h1> {{id}}</h1>
			<div class="mb-4">
				<label class = "form-label" for= "title">Auction title:</label>
				<input class= "form-control" type="text" id="title" name="auction[name]" value= "{{name}}" >
			</div>

			<!-- describtion -->
			<div class="mb-4">
				<label class = "form-label" for= "description">Description: </label>
				<textarea class= "form-control"  type="text" id="description" name="auction[description]" >{{description}} </textarea>
			</div>

			<!-- price -->
			<div class="mb-4">
				<label class = "form-label" for= "price">Price: </label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
  					<input type="text" class="form-control" id="price" placeholder="0" aria-label="Amount (to the nearest dollar)" 
					aria-describedby="price-label" name="auction[price]" value= "{{price}}">			
				</div>
			</div>

			<!-- image -->
			<div class="mb-4">
				<label class = "form-label" for= "image">Image url: </label>
				<input class= "form-control" type="text" id="image" name="auction[image]" value= "{{image}}" >
			</div>

			<div class="mb-3">
				<button class = "btn btn-success">Update auction</button>
			</div>			
		</form>
	</div>
</div>
	<div class="mb-3">
		<a  class= "btn btn-primary" href="/auctions/{{id}}"> Back to auction</a>
	</div>

{{>footer}}